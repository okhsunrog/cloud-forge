    listen 80 proxy_protocol;
    server_name cloud.okhsunrog.ru cloud.okhsunrog.dev;
    
    set_real_ip_from 127.0.0.1;
    real_ip_header proxy_protocol;
    
    return 301 https://$server_name$request_uri;
