global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    tcp
    option  tcplog
    option  dontlognull
    timeout connect 5000ms
    timeout client  50000ms
    timeout server  50000ms

frontend sni_front
    bind {{ ansible_facts['default_ipv4']['address'] }}:443
    mode tcp
    tcp-request inspect-delay 5s
    tcp-request content accept if { req_ssl_hello_type 1 }

    # Routing based on SNI
{% if ocserv_instances is defined %}
{% for instance in ocserv_instances %}
    use_backend ocserv_{{ instance.instance_id }} if { req_ssl_sni -i {{ instance.domain }} }
{% endfor %}
{% endif %}

{% if domains.nginx is defined %}
{% for service, service_domains in domains.nginx.items() %}
{% for domain in service_domains %}
    use_backend nginx if { req_ssl_sni -i {{ domain }} }
{% endfor %}
{% endfor %}
{% endif %}

{% if ocserv_instances is defined %}
    default_backend ocserv_personal
{% else %}
    default_backend nginx
{% endif %}

# Backends
{% if ocserv_instances is defined %}
{% for instance in ocserv_instances %}
backend ocserv_{{ instance.instance_id }}
    mode tcp
    option ssl-hello-chk
    server ocserv_{{ instance.instance_id }} 127.0.0.1:{{ instance.tcp_port }} send-proxy-v2

{% endfor %}
{% endif %}

backend nginx
    mode tcp
    option ssl-hello-chk
    server nginx 127.0.0.1:{{ ports.internal.nginx_https }} send-proxy-v2
